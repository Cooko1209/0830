@{
    using var companys = new z_sqlCompanys();
    var company = companys.GetDefaultCompany();
}

<main id="container">

<!-- 關於我們 -->

@Html.Raw(company.AboutusText)
    <!-- 聯絡我們 -->
    <section class="contact" id="contact">
      <form action="" class="form">
        <h2 class="title" style="font-family: Kalam">聯絡我們</h2>
        <fieldset class="form_main">
          <fieldset class="form_left">
            <div class="inputContainer">
              <input type="email" class="input" placeholder="a" required />
              <label for="" class="label">電子信箱</label>
            </div>

            <div class="inputContainer">
              <input type="text" class="input" placeholder="a" required />
              <label for="" class="label">姓名</label>
            </div>

            <div class="inputContainer">
              <input type="text" class="input" placeholder="a" required />
              <label for="" class="label">主旨</label>
            </div>
          </fieldset>

          <fieldset class="form_right">
            <div class="inputContainer">
              <textarea name="" class="input" id="" cols="30" rows="20" placeholder="a" required></textarea>
              <label for="" class="label">留言</label>
            </div>
          </fieldset>
        </fieldset>

        <button name="submit" type="submit" class="submitBtn">
          確認送出
        </button>
      </form>
    </section>
  </main>

